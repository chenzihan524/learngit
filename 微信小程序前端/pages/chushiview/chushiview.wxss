/* pages/chushiview/chushiview.wxss */
/* 头部样式开始 */
.chushiheaderbox{
  position: relative;
}
.chushiheaderbox image{
width:300rpx;
height:302rpx;
margin: 30rpx;
}
.rightbox{
width:calc(100% - 350rpx); 
height: 300rpx;
background-color: 		#F5F5F5;
position: absolute;
right: 0;
top:30rpx;
}
.nei_ziti{
  font-family: "黑体";
  color:	SaddleBrown;
  margin-left: 10rpx;
}
.line1{
  font-size: 35rpx;
  font-weight: bold;
  margin-top: 10rpx;
  margin-left: 5rpx;
  color: 	SaddleBrown;
}
.line2{
font-size:30rpx;
margin-top: 8rpx;
color: 	#696969;
}
.line3{
  color: 	#696969;
  font-size:30rpx;
  margin-top: 8rpx;
}
.descriptions{
  font-size:30rpx;
  margin-top: 8rpx;
  color: 	#696969;
  }

.btnhover{
opacity: 0.6;
background-color: #ff6600!important;
color: #fff;
}
.btnbox{
width: 240rpx;
height: 80rpx;
position: absolute;
right:10rpx;
bottom: 10rpx;
}
.btnbox view
{
width:78rpx;
height: 80rpx;
float: left;
text-align: center;
line-height:76rpx;
font-size: 45rpx;
}

.fline{
position: relative;/*作为定位的参考*/
padding-left: 20rpx;
border-bottom: solid 1rpx #eee;
height: 75rpx;
line-height: 75rpx;
font-weight: bold;
font-family: "幼圆";
}

.fline input{
position: absolute;
left:220rpx;
top: 0;
font-weight: lighter;
height: 75rpx;
line-height: 75rpx;
}


/* 头部样式结束 */


/* 留言板块 */
/* pages/liuyan/liuyan.wxss */
.liuyan_x{
  width:100%;
  height: 100rpx;
  display: flex;
  border-radius: 5rpx;
  position: fixed;
  bottom: 0;
  z-index: 1;
}
.liuyan_x input{
  border: solid 1rpx #ccc;
  border-radius: 5rpx;
  height: 100rpx;
  background-color: white;
}

.btn-area button{
  background-color: teal;
}

.liuyan_sub:not([size='mini'])
{
  /* 修改宽高 */
  height: 100rpx;
  width: 200rpx;
  /* 颜色 */
  background-color: 		LightGrey;
  /* 字体 */
  font-family: "幼圆";
  font-size: 35rpx;
  line-height: 70rpx;
  border-radius: 5rpx;
}
.button_left{
  width: calc(80% - 40rpx);
  border-radius: 5rpx;
}

/* 留言列表样式开始 */
/* pages/liuyanlist/liuyanlist.wxss */
.liuyanbox1{
  width: 100%;
  margin-top: 10rpx;
  
}
.liuyanitem1{
  border: solid 1rpx darkgrey;
  border-radius: 10rpx;
  margin: 0 auto;
  width: 96%;
  height: 130rpx;
  background-color: ghostwhite;
  margin-top: 30rpx;
}
.line11{
  font-family: "幼圆";
  font-size: 30rpx;
  font-weight: bold;
  height: 130rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  border-right: solid 1rpx darkgrey;
  
}
.line22{
  font-family: "幼圆";
  font-size: 35rpx;
  height: 50rpx;
  border-bottom-left-radius: 10rpx ;
  border-bottom-right-radius: 10rpx  ;
  border-bottom: solid 1rpx darkgrey;
  border-right: solid 1rpx darkgrey;
  background-color: rgb(223, 223, 235);
}
.line11 image{
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}

.line22 image{
  width: 35rpx;
  height: 35rpx;
  margin-top: 10rpx;
}
/* 留言列表样式结束 */
