/* pages/shopcar/shopcar.wxss */
page{
  width: 100%;
  height: 100%;
}
.container{
  width: 100%;
  height: 100%;
}


.listbox{
  width: 100%;
  height:calc(100% - 95rpx);
  overflow-y: scroll;
}

.fooditem{
  height:270rpx;
  border-bottom: solid 1rpx #F1F1F1;
  position: relative;
}

.fooditem image{
  width: 220rpx;
  height: 202rpx;
  margin: 20rpx;
}
.rightbox{
  width:calc(100% - 260rpx);
  height: 270rpx;
  position: absolute;
  right: 0;
  top: 0;
}
.line1{
  font-size: 45rpx;
  font-weight: bold;
  padding-top: 10rpx;
  margin-top: 20rpx;
}
.line2{
  color: #898989;
  margin-top: 20rpx;
}

.line3{
  color: 	#D2B48C;
  margin-top: 10rpx;
  line-height:70rpx;
}

.line4 text{
  border:solid 1px #E0C99F;
  color: #E0C99F;
  padding:2rpx 20rpx;
  margin-right: 10rpx;
}

.itemhover{
  background-color: #eee;
}
.fooditem image.btndel{
  width:60rpx;
  position: absolute;
  right: 5rpx;
  bottom:22rpx;
}

.ad1{
  width: 100%;
}
.ad1 image{
  width: 100%;
}
.btngotobuy{
  width: 100%;
  height:88rpx;
  background-color: #BC8F8F;
  text-align: center;
  line-height: 88rpx;
  color: white;
  position: fixed;
  bottom: 0;
}

.hoverclass{
  opacity: 0.8;
}

.sendinfobox{
  width: 100%;
  height:calc(100% - 90rpx);
  background-color: #fff;
  position: absolute;
  left: 0;
  top: 0;
}

.fline{
  position: relative;/*作为定位的参考*/
  padding-left: 20rpx;
  border-bottom: solid 1rpx #eee;
  height: 75rpx;
  line-height: 75rpx;
  font-weight: bold;
}

.fline input{
  position: absolute;
  left:220rpx;
  top: 0;
  font-weight: lighter;
  height: 75rpx;
  line-height: 75rpx;
}
.pricebox{
  margin: 10rpx;
  color: 	#D2B48C;
}